<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jase.prototype.gui"
    android:background="@drawable/appbackground">

    <Switch
        android:id="@+id/fwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="45dp"
        android:layout_marginTop="20dp"
        android:checked="true"
        android:showText="true"
        android:splitTrack="false"
        android:trackTint="#07cdff"
        android:text="R/F"
        android:textOff="R"
        android:textOn="F"
        android:thumbTint="@color/fore_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/reconnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="Reconnect"
        android:background="@drawable/btn_background"
        android:textColor="#ffffff"
        android:bottomRightRadius="30dp"
        android:bottomLeftRadius="30dp"
        android:topLeftRadius="30dp"
        android:topRightRadius="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <SeekBar
        android:id="@+id/power"
        android:layout_width="245dp"
        android:layout_height="245dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:max="99"
        android:progressDrawable="@drawable/track_background"
        android:rotation="270"
        android:splitTrack="false"
        android:thumb="@drawable/thumb_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Estop"
        android:layout_width="96dp"
        android:layout_height="62dp"
        android:layout_marginBottom="68dp"
        android:background="@drawable/stop_btn"
        android:text="Emergency Stop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/diagnostics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="RPMs : 1000" />

    <SeekBar
        android:id="@+id/steering"
        android:layout_width="245dp"
        android:layout_height="245dp"
        android:layout_marginBottom="68dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:progress="50"
        android:progressDrawable="@drawable/steer_background"
        android:splitTrack="false"
        android:progressTint="@color/fore_color"
        android:progressTintMode="src_over"
        android:thumb="@drawable/thumb_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtSteering"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:layout_marginTop="88dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Current steering" />

    <TextView
        android:id="@+id/txtPower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="224dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/steering"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Current Power" />


</android.support.constraint.ConstraintLayout>
